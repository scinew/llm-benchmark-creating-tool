generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum BenchmarkRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projects    Project[]
  savedModels SavedModel[]
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  config      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  benchmarkRuns BenchmarkRun[]

  @@index([userId])
}

model BenchmarkRun {
  id        String             @id @default(cuid())
  projectId String
  name      String
  status    BenchmarkRunStatus @default(PENDING)
  config    Json
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  project Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  results BenchmarkResult[]

  @@index([projectId])
  @@index([status])
}

model BenchmarkResult {
  id        String   @id @default(cuid())
  runId     String
  modelName String
  score     Float
  metadata  Json
  createdAt DateTime @default(now())

  run BenchmarkRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([modelName])
}

model SavedModel {
  id        String   @id @default(cuid())
  userId    String
  modelName String
  modelLogo String
  source    String
  addedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelName])
  @@index([userId])
}
